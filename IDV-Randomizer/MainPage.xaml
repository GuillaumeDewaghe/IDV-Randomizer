<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IDV_Randomizer.MainPage">

    <VerticalStackLayout>
        <Button x:Name="GenerateButton" 
                Text="Generate"
                Clicked="GenerateButton_Clicked"/>
        <Label x:Name="CharacterLabel"/>
        <Label x:Name="SurvivorPrimaryJobLabel"
               IsVisible="False"/>
        <Label x:Name="SurvivorSecondaryJobLabel"
               IsVisible="False"/>
        <Label x:Name="HunterSkillLabel"
               IsVisible="False"/>
        <Image x:Name="CharacterImage"
               WidthRequest="144"
               HeightRequest="204"/>
    </VerticalStackLayout>

</ContentPage>
